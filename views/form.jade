extends layout

block content
	head
		link(rel='stylesheet', href='dist/stylesheets/form.css')
	body
		main.top-content(style='background-image: url(http://www.planwallpaper.com/static/images/colorful-triangles-background_yB0qTG6.jpg)' alt="Bakgrunnsmynd af litríku polygonal mynstri")
			header
				h1 Ný Síða
				h2 Hér getur þú sett upp þína eigin vefsíðu!
	.wrapper
		if vm
			p #{vm}
		form.form-horizontal(method="post" name="Register form")
			.form-group
				label.col-md-3(for='sitename') Nafn Síðu:	
				.col-md-9
					input#sitename(type="text" name="sitename" class="sitename")
			.form-group
				label.col-md-3(for='name') Fyrirsögn:
				.col-md-9
					input#name(type="text" name="name" class="name" value=renderData.name)
			.form-group
				label.col-md-3(for='subheader') Undirfyrirsögn:
				.col-md-9
					input#subheader(type="text" name="subheader" clas="subheader" value=renderData.subheader)
			.form-group
				label.col-md-3(for='description') Texti:
				.col-md-9
					textarea#description.form-control(type="text" rows='7' name="description" class="description") #{renderData.description}
			.form-group
				label.col-md-3(for='pf') Mynd við fyrirsögn:
				.col-md-9
					input#pf(type="text" name="pf" placeholder="imgur.com/mynd.jpg" class="pf" value=renderData.pf)
			.form-group
				label.col-md-3(for='background') Bakgrunnsmynd:
				.col-md-9
					input#background(type="text" placeholder="imgur.com/mynd.jpg" name="background" class="background" value=renderData.background)
			.form-group
				.col-md-3
					input(type="submit" class="takki" name="Submit button" )
