doctype html
html
	head
		title=title
		link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet")
		meta(name='viewport', content='width=device-width, initial-cale=1')
		meta(charset='UTF-8')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link(href='https://fonts.googleapis.com/css?family=Raleway|Bree+Serif', rel='stylesheet', type='text/css')
		link(rel='stylesheet', href='dist/stylesheets/styles.css')
		link(rel='stylesheet', href='dist/stylesheets/index.css')
		body
			main.top-content(style='background-image: url(http://www.planwallpaper.com/static/images/colorful-triangles-background_yB0qTG6.jpg)')
				header
					h1 Sunnsteinn 
					h2
						p Velkomin á síðuna Sunnstein
						p Hér getur þú búið þér til þína eigin vefsíðu.
		.wrapper
			if data
				p Villa við auðkenningu
			if user
				h3 Þú ert skráð/ur inn sem #{user.username}
					if reqstatus === 0
						h3 Það eru engar vinabeiðnir eins og er.
					if reqstatus === 1
						h3 Þú ert með 1 vinabeiðni!
					if reqstatus > 1
						h3 þú ert með #{reqstatus} vinabeiðnir!
					if requests
						each u in requests
							p(name='nafn', class='nafn', value=u.friend)
								input(id='friendval' type='button', class="btn btn-success formButton", value='Samþykja #{u.friend}')
								input(id='friendval' type='button', class="btn btn-danger formButton", value='Hunsa #{u.friend}')
			else 
				fieldset
					form.form-horizontal(method="post")
						.form-group
							.col-md-2
								label(for='sitename') Notendanafn:	
							.col-md-10
								input(type="text" name="username" id="sitename" class="username")
						.form-group
							.col-md-2
								label(for='password') Lykilorð:
							.col-md-10
								input(type="text" name="password" id="password" class="password")
						.form-group
							.col-md-1
								input(type="submit" class="takki" )
		nav
			ul
				li.verkefnilink
					a(href='/') Heim
				if user
					li.verkefnilink
						a(href='/profile') Um mig
					li.verkefnilink
						a(href='/search') Leita að vinum
					li.verkefnilink
						a(href='/find') Mínar síður
					li.verkefnilink
						a(href='/form') Ný síða
					li.verkefnilink
						a(href='/sida') Dæmi um síðu
					li.verkefnilink
						a(href='/friends') Vinir mínir
					li.verkefnilink
						a(href='/logout') Útskrá
				if !user
					li.heimlink
						a(href='/register') Nýskrá
					li.heimlink
						a(href='/sida') Dæmi um síðu

	
			script(src="/javascripts/frontend.js")
			script(src="/bower_components/jquery/dist/jquery.min.js")
